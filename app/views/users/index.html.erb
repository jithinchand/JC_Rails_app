<p id="notice"><%= notice %></p>

<h1>Listing users</h1>

<div class="container-fluid">
<div class="row">
  <div class="col-md-4"><h4>Name</h4></div>
  <div class="col-md-5"><h4>Email</h4></div>
  <div class="col-md-1">&nbsp;</div>
  <div class="col-md-1">&nbsp;</div>
  <div class="col-md-1">&nbsp;</div>
</div>
<% @users.each do |user| %>
    <div class="row">
      <div class="col-md-4"><%= user.name %></div>
      <div class="col-md-5"><%= user.email %></div>
      <div class="col-sm-1"><%= link_to 'Show', user %></div>
      <div class="col-sm-1"><%= link_to 'Edit', edit_user_path(user) %></div>
      <div class="col-sm-1"><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></div>
    </div>
<% end %>
</div>

<br>

<%= link_to 'New User', new_user_path %>